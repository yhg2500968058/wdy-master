<select id="findAllContent" resultType="com.wdy.seckill.model.dto.Content">
select tb_content.id, name as categoryId, title, url, pic, status, sort_order
from tb_content,
     tb_content_category
where category_id = tb_content_category.id limit #{page},#{rows}
	</select>

    <select id="findTotal" resultType="Long">
        select count(id) from tb_content order by id
    </select>


